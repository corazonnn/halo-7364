<!--ユーザが横にできない！！！！-->
<div id="user-chart" class="big-bg">
  
  <h1 class="pl-5 mt-2 mb-4 p-3" id="user-list-mozi">ユーザリスト</h1>
    <% if @users.any? %>
      <div class="profile_list">
        <div class="container">
          <div class="row">
            
            
           <!--rowのすぐ下にしなきゃいけない-->
              <% @users.each do |user| %>
              <div class="col-md-3 mb-3 text-center">
                  <div class="card-deck">
                    <div class="card mb-5">
                      <!--表示方法#######################################################-->
                      <p class="mb-0 pb-0">
                        <!--<strong>Image:</strong>-->
                        <%= image_tag( user.image.url,class: 'icon') if user.image? %>
                      </p>
                      
                      <div class="card-body pb-0 pb-0">
                        <small class="border-bottom">ユーザー名</small>
                        <h3><%= user.username %></h3>
                        <small class="border-bottom">使用言語</small>
                        <h5><%= user.language %></h5>
                        <p><%= link_to("詳細", user_path(user), { class: " btn btn-outline-secondary"}) %></p>
                      </div>
                    </div>
                  </div>
              </div>
                    
              <% end %>
            
            
            
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-center"><%= paginate @users %></div>
    <% end %>
</div>

