
<article>
  <div class="jumbotron mb-0">
    <div class="container">
      <h1 class="display-4">OUTPUT NEW</h1>
      <p class="lead">小さな成功をみんなに教えてあげよう</p>
    </div>
  </div>
  <div class="container pt-5">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <div class="card mb-2">
        <div class="card-header text-center p-0">
          <small class="border-bottom">作成者</small>
          <h5><%= @product.user.username  %></h5>
        </div>
            
        <div class="card-body p-3">
          <%= form_with(model: @product,method: :post, local: true) do |f| %>
            <%= render 'layouts/error_messages', model: f.object %>
            <div class="form-group mt-0" id="new-product">
              <%= f.label :title, 'タイトル' %>
              <%= f.text_field :title, class: 'form-control' %>
            </div>
            
            <!--ドロップダウンで言語が選べるのもいいかも-->
            <div class="form-group" id="new-product">
              <%= f.label :language, '使用言語' %><br>
              <%= f.select :language, [["HTML&CSS","HTML&CSS"],["JavaScript","JavaScript"],["PHP","PHP"],["Ruby","Ruby"],["Python","Python"],["Java","Java"],["C++","C++"],["C#","C#"],["Swift","Swift"],["R","R"]], include_blank: "選択して下さい", class: 'form-control' %>
            </div>  
      
            <div class="form-group" id="new-product">
              <%= f.label :period, '作成期間' %>
              <%= f.text_field :period, class: 'form-control' %>
            </div>
      
            <div class="form-group" id="new-product">
              <%= f.label :detail, '概要' %>
              <small class="text-muted pl-3">
                ※デプロイしている人はぜひリンク貼ってください
              </small>
              <%= f.text_area :detail, class: 'form-control',size: "20x5"%>
            </div>
            
            <div class="text-center mt-1">
              <span class="pr-3">
                <%= link_to(root_path, { class: " btn pt-0 pb-0 pr-2 pl-2"}) do %>
                  <h5 class="pb-0 mb-0"  id="product-show-index"><i class="fas fa-redo"></i></h5>
                  <small class="pt-0 mt-0"  id="product-show-index">一覧に戻る</small>
                <% end %>
              </span>
                <%= button_tag :type => "submit", :class =>"btn pt-0 pb-0 pr-0 pl-0" do %>
                  <h5 class="pb-0 mb-0" id="product-new-save"><i class="fas fa-save fa-lg "></i></h5>
                  <small class="pt-0 mt-0" id="product-new-save" >保存</small>
                
                <% end %>
              
              
              
            </div>
            
          <% end %>
          
      </div>
      
    </div>
  </div>
  </div>
  <p class="mb-5 pb-5"></p>
</article>

  

