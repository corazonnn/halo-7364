<!--ユーザが横にできない！！！！-->
<div id="user-chart" class="big-bg">
  
  <h1 class="pl-5 mt-2 mb-4 p-3" id="user-list-mozi">ユーザリスト</h1>
    <% if @users.any? %>
      <div class="profile_list">
        <div class="container">
          <div class="row">
            
            
           <!--rowのすぐ下にしなきゃいけない-->
              <% @users.each do |user| %>
              <div class="col-md-3 mb-3 text-center">
                  <div class="card-deck">
                    <div class="card mb-5">
                      <!--表示方法#######################################################-->
                      <p class="mb-0 pb-0">
                        <!--<strong>Image:</strong>-->
                        <% if user.image? %>
                          <%= image_tag( user.image.url,class: 'icon') %>
                        <% else %>
                          <%= image_tag("default_icon.png",class: 'icon')   %>
                        <% end %>
                        
                      </p>
                      
                      <div class="card-body pb-0 pb-0">
                        <small class="border-bottom">ユーザー名</small>
                        
                        <h6><%= truncate(user.username, length: 20) %></h6>
                        <small class="border-bottom">使用言語</small>
                        <h5><%= truncate(user.language, length: 15) %></h5>
                        
                        <%= link_to(user_path(user), { class: "btn pt-2 pb-0 pr-0 pl-0"}) do %>
                          <h5 id="product-index-more">
                            More&nbsp;&nbsp;<i class="fas fa-angle-double-right"></i>
                          </h5>
                        <% end %>
                        
                        
                        
                      </div>
                    </div>
                  </div>
              </div>
                    
              <% end %>
            
            
            
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-center"><%= paginate @users %></div>
    <% end %>
</div>

