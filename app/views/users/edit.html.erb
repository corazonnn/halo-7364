<div class="jumbotron mb-0">
  <div class="container">
    <h1 class="display-4">USER EDIT</h1>
    <p class="lead">ユーザー編集ページ</p>
  </div>
</div>
<article>
  <%= form_with(model: @user,local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="container pt-4">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <div class="card-deck">
          <div class="card mb-5">
            <!--入力フォーム#########################################################################-->
            
            <%= f.file_field :image %>
            <div id="edit-button" class="mb-3 mt-2 text-center">
              <%= f.submit 'アイコンを更新', class: 'btn btn-warning'%>
            </div>
            
            
            
            <div class="card-body">
              <%= f.label :username,'名前' %>
              <%= f.text_field :username, class: 'form-control' %>
              <%= f.label :language,'使用言語' %>
              <%= f.text_field :language, class: 'form-control' %>
              <%= f.label :introduction,'自己紹介' %>
              <%= f.text_area :introduction, class: 'form-control' %>
              <div id="save-button" class="mb-3 mt-2 text-center">
                <%= f.submit '保存', class: 'btn btn-success' %>
              </div>
              <div class="return-button text-center">
                
                <%= link_to(users_path, { class: " btn pt-0 pb-0 pr-2 pl-2"}) do %>
                  <h5 class="pb-0 mb-0"  id="product-show-index"><i class="fas fa-redo"></i></h5>
                  <small class="pt-0 mt-0"  id="product-show-index">一覧に戻る</small>
                <% end %>
                <%= link_to(user_path(@user), { class: " btn pt-0 pb-0 pr-2 pl-2"}) do %>
                  <h5 class="pb-0 mb-0"  id="product-show-show"><i class="fas fa-redo"></i></h5>
                  <small class="pt-0 mt-0"  id="product-show-show">詳細に戻る</small>
                <% end %>
                
              </div>
              
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</article>
