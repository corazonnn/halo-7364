<!--管理者-->
<div class="container">
  <div class="row">
    <div class="mb-4 mt-3">
      <h1>管理者専用ページ</h1>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>ユーザー名</th>
          <th>title</th>
          <th>登録日</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td>
              <%= link_to(admin_product_path(product)) do %>
                <%= product.user.username %>
              <% end %>
            </td>
          	<td>
          	  <%= link_to(admin_product_path(product)) do %>
                <%= product.title %>
              <% end %>
          	</td>
          	<td><%= product.created_at.strftime("%Y年%m/%d") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @products %>
  </div>
</div>
  