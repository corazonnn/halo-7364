
<h1 class="pl-5 mt-2 mb-2 p-3" id="product-list-mozi">新規作成</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <div class="card mb-5">
        <div class="card-header">
          <small class="border-bottom">作成者</small>
          <h5><%= @product.user.username  %></h5>
        </div>
            
        <div class="card-body">
          <%= form_with(model: @product,method: :post, local: true) do |f| %>
            <%= render 'layouts/error_messages', model: f.object %>
            <div class="form-group mt-2" id="new-product">
              <%= f.label :title, 'タイトル' %>
              <%= f.text_field :title, class: 'form-control' %>
            </div>
            
            <!--ドロップダウンで言語が選べるのもいいかも-->
            <div class="form-group" id="new-product">
              <%= f.label :language, '使用言語' %>
              <%= f.text_field :language, class: 'form-control' %>
            </div>
      
            <div class="form-group" id="new-product">
              <%= f.label :period, '作成期間' %>
              <%= f.text_field :period, class: 'form-control' %>
            </div>
      
            <div class="form-group" id="new-product">
              <%= f.label :detail, '概要' %>
              <small class="text-muted pl-3">
                ※デプロイしている人はぜひリンク貼ってください
              </small>
              <%= f.text_area :detail, class: 'form-control',size: "20x5"%>
            </div>
            
            <div class="text-center mt-5">
              <span class="pr-3">
                <%= link_to("一覧に戻る",root_path,class:"btn btn-primary") %>
              </span>
              
              <%= f.submit '保存', class: 'btn btn-success' %>
            </div>
            
          <% end %>
          
      </div>
    </div>
  </div>
</div>
  
  

